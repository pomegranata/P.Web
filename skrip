function cekAngka(){
if (form.bil_pert.value == "" || form.bil_ked.value == ""){
	alert("Angka harus diisi :( ");
exit;
}
}
function tambahAngka(){
	cekAngka();
	bil1=eval(form.bil_pert.value);
	bil2=eval(form.bil_ked.value);
	form.hasil.value=bil1+bil2;
	alert("Hasil penjumlahan: " + hasil);
}
function ulangHitung(){
	form.bil_pert.value="";
	form.bil_ked.value="";
	form.hasil.value="";
}
